<h2>Create a New Project</h2>

<%= form_for @project, role: 'form' do |f| %>
  <%= error_messages_for @project %>
  
  <div class='form-group'>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  
  <div class='form-group'>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  
  <%= f.submit class: 'btn btn-primary' %>
<%- end -%>